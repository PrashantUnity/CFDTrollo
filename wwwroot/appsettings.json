{
  "AppSettings": {
    "ApplicationName": "CFDTrollo",
    "Version": "1.0.0",
    "MaxWorkspaces": 10,
    "MaxListsPerWorkspace": 20,
    "MaxCardsPerList": 100,
    "EnableDebugMode": false,
    "AutoSaveInterval": 5000,
    "EnableDragDropAnimations": true,
    "DefaultWorkspace": {
      "Name": "My Workspace",
      "Description": "Your main project board",
      "Color": "#3B82F6",
      "CreateDefaultLists": true,
      "DefaultListNames": ["To Do", "In Progress", "Done"]
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
